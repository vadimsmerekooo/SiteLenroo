@inject SignInManager<LenrooUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}


<ul class="nav nav-pills nav-stacked head__text-link">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)">
        <a asp-page="./Index">Новости</a>
        <ul class="@ManageNavPages.IndexNavClass(ViewContext)">
            <li>
                <a asp-page="./AddedNews">Добавить новость</a>
            </li>
        </ul>
    </li>
    <li class="@ManageNavPages.PhotoNavClass(ViewContext)">
        <a asp-page="Photo">Фото и изображения</a>
        <ul class="@ManageNavPages.AddPhotoNavClass(ViewContext)">
            <li>
                <a asp-page="./UploadPhoto">Добавить фото или изображение</a>
            </li>
        </ul>
    </li>



    @if (User.IsInRole("admin"))
    {
        <li class="@ManageNavPages.RolesNavClass(ViewContext)"><a asp-page="./Roles">Управление ролями</a></li>
    }

</ul>
<hr />
<form id="logoutForm" style="padding: 0;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
    <button id="logout" type="submit" class="btn btn-primary">Выйти</button>
</form>
