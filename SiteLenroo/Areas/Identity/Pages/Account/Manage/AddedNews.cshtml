@page
@model SiteLenroo.Areas.Identity.Pages.Account.Manage.AddedNewsModel
@{
    ViewData["Title"] = "Добваление новсти";
    SiteLenrooContext2 _context = new SiteLenrooContext2();
}

<h5>@ViewData["Title"]</h5>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<form class="col-lg" id="form-addpost" asp- asp-page-handler="Create" enctype="multipart/form-data" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.Title">Заголовок</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="first_input" placeholder="Заголовок" asp-for="Input.Title" maxlength="100">
        </div>
        <span asp-validation-for="Input.Title" class="col col-form-label text-danger"></span>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.PreviewPhoto">Изображение для превью</label>
        <div class="col-sm-10">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <div class="select">
                <input class="form-control col-sm-10" type="hidden" name="photo" asp-for="Input.PreviewPhoto">
                <div class="select__head" onclick="updatePhoto();">Выберите изображение для превью...</div>
                <ul class="select__list" id="inputGroupSelectPhoto" style="display: none;">
                </ul>
            </div>
            <a target="_blank" asp-page="./UploadPhoto">Добавить фото</a>
        </div>
        <span asp-validation-for="Input.PreviewPhoto" class="col col-form-label text-danger"></span>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.PreviewText">Описание превью</label>
        <div class="col-sm-10">
            <textarea type="text" class="form-control" asp-for="Input.PreviewText" placeholder="Описание превью"></textarea>
        </div>
        <span asp-validation-for="Input.PreviewText" class="col col-form-label text-danger"></span>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.Url">Url</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Input.Url" id="second_input" placeholder="Url поста">
        </div>
        <span asp-validation-for="Input.Url" class="col col-form-label text-danger" text-danger></span>
    </div>
    <hr class="my-4 bg-light">

    <script src="~/skeditor/ckeditor4/ckeditor.js"></script>
    <script src="~/skeditor/ckeditor5/ckeditor.js"></script>

    <div class="form-group-row">
        <label class="col-sm-2 col-form-label">Description</label>
        <textarea asp-for="Input.Description" name="editor" id="editor" rows="10" cols="80" style="min-height: 600px;"></textarea>
        <span asp-validation-for="Input.Description" class="col col-form-label"></span>
        <script>
            CKEDITOR.replace('editor');
        </script>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.Tag">Тег</label>
        <div class="col-sm-10">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <div class="select">
                <input class="form-control col-sm-10" type="hidden" name="tag" asp-for="Input.Tag">
                <div class="select__head" onclick="updateTags();">Выберите Тег...</div>
                <ul class="select__list" id="inputGroupSelectTags" style="display: none;">
                </ul>
            </div>
            <a class="text-dark" target="_blank" asp-page="./AddedTag">Добавить новый тег</a>
        </div>
        <span asp-validation-for="Input.Tag" class="col col-form-label text-danger"></span>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.Category">Категория</label>
        <div class="col-sm-10">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <div class="select">
                <input class="form-control col-sm-10" type="hidden" name="cat" asp-for="Input.Category">
                <div class="select__head" onclick="updateCategory();">Выберите Категорию...</div>
                <ul class="select__list" id="inputGroupSelectCategory" style="display: none;">
                </ul>
            </div>
            <a class="text-dark" target="_blank" asp-page="./AddedCategory">Добавить новую категорию</a>
        </div>
        <span asp-validation-for="Input.Category" class="col col-form-label text-danger"></span>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Input.MainNews">Главная новость</label>
        <input type="checkbox" name="mainnews" asp-for="Input.MainNews" />
        <span asp-validation-for="Input.MainNews" class="col col-form-label text-danger" text-danger></span>
    </div>
    <hr class="my-4 bg-light">
    <div class="form-group-row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Добавить</button>
            <a class="btn btn-danger" asp-page="./Index">Отмена</a>
        </div>
    </div>
</form>
